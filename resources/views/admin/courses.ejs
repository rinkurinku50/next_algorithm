                                        <th>Course Catagory</th>
                                        <th>View Module</th>
                                    </tr>
                                </tfoot>-->
                                <tbody>
                                    <% if(allCourses) {%>
                                        <% allCourses.forEach(function(course) { %>
                                            <tr>
                                                <td>
                                                    <%= course.cId %>
                                                </td>
                                                <td>
                                                    <%= course.cname %>
                                                </td>
                                                <td>
                                                    <%= course.ccatagory %>
                                                </td>
                                                <td>
                                                    <%= course.ctiming %> days
                                                </td>
                                                <td>
                                                    <%= course.batch %>
                                                </td>
                                                <td class="text-center">
                                                    <a class="btn btn-danger text-white mb-2 mb-lg-0" href="/admin/courses/<%= course.cId %>">Delete</a>

                                                </td>
                                                <td class="text-center">
                                                    <button class="editcourse d-inline-block btn btn-info text-white mb-2 mb-lg-0" data-course="<%= JSON.stringify(course) %>">Edit</button>

                                                </td>
                                                <td class="text-center">
                                                    <button class="viewcourses d-inline-block btn btn-secondary text-white " data-course="<%= JSON.stringify(course) %>" data-toggle="modal" data-target="#courseimage">
                                                       Image</button>
                                                </td>

                                            </tr>
                                            <%   }) %>
                                                <%}%>


                                </tbody>
                            </table>
