                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fa fa-table"></i> Courses</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <% if(messages.error) { %>
                                    <div class="alert alert-danger text-red-500 font-bold text-sm">
                                        <%= messages.error %>
                                    </div>
                                    <%} else if(messages.success) { %>
                                        <div class="alert alert-success text-red-500 font-bold text-sm">
                                            <%= messages.success %>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Course Id</th>
                                        <th>Course Name</th>
                                        <th>Course Catagory</th>
                                        <th>Course Timing</th>
                                        <th>Course Batch</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                        <th>Image</th>
                                    </tr>
                                </thead>
                                <!--<tfoot>
